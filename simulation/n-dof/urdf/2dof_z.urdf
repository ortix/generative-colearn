<?xml version="1.0"?>

<robot name="DoublePendulum">
  <material name="Grey">
    <color rgba="0.2 0.2 0.2 1.0"/>
  </material>
  <material name="Orange">
    <color rgba="1.0 0.423529411765 0.0392156862745 1.0"/>
  </material>
  <material name="Blue">
  <color rgba="0.5 0.7 1.0 1.0"/>      
</material>

  <link name="base_link">
    <visual>
      <origin rpy="0 0 0" xyz="0 0 0.1"/>
      <geometry>
         <box size=".1 .1 .1" />
      </geometry>
      <material name="Grey"/>
    </visual>
  </link>

  <link name="upper_link">
    <inertial>
      <origin xyz="0 -1 0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0.0" iyz="0" izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 -0.475 0" rpy="1.57 0 0" />
      <geometry>
         <cylinder length="1.05" radius=".05" />
      </geometry>
      <material name="Blue"/>
    </visual>
  </link>


  <link name="lower_link">
    <inertial>
      <origin xyz="0 -1.0 0" rpy="0 0 0" />
      <mass value="1" />
      <inertia ixx="0" ixy="0" ixz="0" iyy="0" iyz="0" izz="0.01" />
    </inertial>
    <visual>
      <origin xyz="0 -0.475 0" rpy="1.57 0 0" />
      <geometry>
         <cylinder length="1.1" radius=".05" />
      </geometry>
      <material name="Orange"/>
    </visual>
  </link>


  <joint name="shoulder" type="continuous">
    <parent link="base_link" />
    <child link="upper_link" />
    <origin xyz="0 0 0.2" />
    <axis xyz="0 0 1" />
    <dynamics damping="0" />
  </joint>

  <joint name="elbow" type="continuous">
    <parent link="upper_link" />
    <child link="lower_link" />
    <origin xyz="0 -1 -0.1" />
    <axis xyz="0 0 1" />
    <dynamics damping="0" />
  </joint>
</robot>
